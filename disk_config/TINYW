# This disk_config is suitable for a workstation with >30GB and <35GB hard disk

disk_config disk1 disklabel:gpt preserve_lazy:1 fstabkey:uuid bootable:3 align-at:8k
primary		-					100M	msdos	-
primary		swap					512M	swap	rw
primary		-					30G-	-	-

disk_config lvm fstabkey:uuid
vg		vg					disk1.3
vg-root 	/					26G-	ext3 rw,errors=remount-ro
vg-var 		/var					2G-	ext3 rw
vg-data		/data					2G-	xfs  rw

