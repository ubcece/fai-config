# This disk_config is suitable for a hard disk with >=150GB

disk_config disk2 disklabel:gpt-bios preserve_lazy:1 fstabkey:uuid align-at:8k
primary		-		150M-200M	vfat	-
primary		swap		8G	swap	rw
primary		-		140G-	-	-

disk_config lvm fstabkey:uuid preserve_lazy:vg-data
vg		vg		disk2.3
vg-root1	/		60G-90G	ext4	rw,errors=remount-ro createopts="-O ^metadata_csum"
vg-var1		/var		6G-8G	ext4	rw createopts="-O ^metadata_csum"
vg-root2	/altroot	60G-90G	ext4	rw,errors=remount-ro createopts="-O ^metadata_csum"
vg-var2		/altroot/var	6G-8G	ext4	rw createopts="-O ^metadata_csum"
vg-data		/data		5G-	xfs	rw

vg-snapreserve	-		1G	-	-
