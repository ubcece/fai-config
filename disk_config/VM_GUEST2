# This disk_config is suitable for a virtual server two virtual disks.
# The second, larger, disk (/dev/sdb) will be used for data storage.

disk_config disk1 disklabel:gpt preserve_lazy:1 fstabkey:uuid bootable:2 align-at:8k
primary		/boot/efi		16M	vfat	rw
primary		-			15900M-	-	-

disk_config disk2 disklabel:gpt preserve_lazy:1 fstabkey:uuid align-at:8k
primary		-			16M	vfat	-
primary		-			7G-	-	-

disk_config lvm fstabkey:uuid preserve_lazy:vg-data
vg		VGroot			disk1.2
VGroot-LVroot 	/			4G-	ext4	rw,errors=remount-ro createopts="-i 12288"
VGroot-LVswap	swap			2G	swap	rw
VGroot-LVtmp	/tmp			1G-3G	ext4	rw,nodev,nosuid
VGroot-LVvar 	/var			2G-8G 	ext4	rw
VGroot-LVlog	/var/log		4G-8G	ext4	rw
VGroot-LVaudit	/var/log/audit		1G	ext4	rw
VGroot-snapreserve  -			1G	-	-

vg		vg			disk2.2
vg-data		/data			6G-95%  xfs	rw,noatime
