# This disk_config is suitable for hard disk with >=10GB and <40GB

disk_config disk1 disklabel:gpt preserve_lazy:1 fstabkey:uuid bootable:3 align-at:8k
primary		-		100M	msdos	-
primary		swap		512M	swap	rw
primary		-		9G-	-	-

disk_config lvm fstabkey:uuid preserve_lazy:vg-data
vg		vg		disk1.3
vg-root 	/		4G-	ext4 rw,errors=remount-ro
vg-var 		/var		4G-	ext4 rw
vg-data		/data		1G-	xfs  rw
