disk_config disk1 disklabel:gpt fstabkey:uuid bootable:3 align-at:8k
primary		-				100M	msdos	-
primary		-				25G-	-	-

disk_config lvm fstabkey:uuid
vg		vg				disk1.2
vg-swap		swap				2G	swap	rw
vg-root 	/				12G	ext4	rw,errors=remount-ro
vg-var 		/var				4G-	ext4	rw

# Leave some unused space in vg for snapshot volume
# derekp: Don't know if FAI lets you reserve space by omitting the filesystem type
vg-snapreserve  -				8G	-	-
