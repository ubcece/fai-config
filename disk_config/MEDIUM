# This disk_config is suitable for a hard disk with >=60GB and <150GB

disk_config disk1 disklabel:gpt-bios preserve_lazy:1 fstabkey:uuid bootable:1 align-at:8k
primary		/boot/efi	150M-200M	vfat	rw
primary		swap		2G	swap	rw
primary		-		58G-	-	-

disk_config lvm fstabkey:uuid preserve_lazy:vg-data
vg		vg		disk1.3
vg-root 	/		50G-80G	ext4 rw,errors=remount-ro createopts="-O ^metadata_csum"
vg-var 		/var		4G-12G	ext4 rw createopts="-O ^metadata_csum"
vg-data		/data		4G-	xfs  rw createopts="-m crc=0"
