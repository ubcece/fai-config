# This disk_config is suitable for a hard disk with >=50GB and <150GB

disk_config disk1 disklabel:gpt-bios preserve_lazy:1 fstabkey:uuid bootable:1 align-at:8k
primary		/boot/efi	150M-200M	vfat	rw
primary		swap		2G	swap	rw
primary		-		48G-	-	-

disk_config lvm fstabkey:uuid preserve_lazy:vg-data
vg		vg		disk1.3
vg-root 	/		40G-80G	ext4 rw,errors=remount-ro createopts="-O ^metadata_csum"
vg-var 		/var		3G-8G	ext4 rw createopts="-O ^metadata_csum"
vg-data		/data		5G-	xfs  rw
