#! /bin/bash

case $HOSTNAME in
    s?pxe[dp]?)
        echo "NO_DHCPC SERVER FAISERVER" ;;
    s?mail[dp]?|smtp?)
        echo "SERVER MAIL" ;;
    s?webmail[dp]?)
        echo "SERVER WEBMAIL" ;;
    s?sql[dp]?)
        echo "SERVER DATABASE" ;;
    rt|rt.*|rt-staging|rt-staging.*)
        echo "SERVER WEB RT" ;;
    [kmx]host*)
        echo "NO_DHCPC SERVER VM_HOST" ;;
    master|master[0-9])
        echo "NO_DHCPC SERVER MASTERSERVER LOOKUPSERVER" ;;
    cfmaster*)
        echo "SERVER CFENGINESERVER UBUNTU_18_04" ;;
    s?ldap[dp]?)
        echo "SERVER LOOKUPSERVER" ;;
    s?lookup[dp]?|s?dns[dp]?)
        echo "NO_DHCPC SERVER LOOKUPSERVER" ;;
    s?etl[dp]?)
        echo "SERVER ETL NO_ECE UBUNTU_18_04" ;;
    s?sympa[dp]?)
        echo "SERVER MAIL SYMPA NO_ECE UBUNTU_18_04" ;;
    msmb1)
        echo "SERVER SMBSERVER RAID1" ;;
    s?smb[dp]?|s?filer[dp]?)
        echo "SERVER SMBSERVER" ;;
    fog*|s?fog[dp]*)
        echo "SERVER SLOW" ;;
    *webgoat*)
        echo "SERVER WEBGOAT" ;;
    [kmxv]web?|[kmx]vweb?|s?web[dp]*)
        echo "SERVER WEB RT" ;;
    [kmxv]flex?)
        echo "SERVER" ;;
    purang1[345])
        echo "VM_HOST" ;;
    bci04|mehdi-pc02|kramer|purang8|oceanus|vwong-pc11)
        echo "CUDA" ;;
    bci06)
        echo "CUDA NO_ECE" ;;
    g32)
        echo "DISK2 SERVER OMNI" ;;
    jwang-pc22)
        echo "LARGE CUDA" ;;    # Has multiple disks; install to just the SSD
    tims-pc21)
        echo "DISK1P3 CUDA" ;;
    newton|leibnitz|darwin|zeus)
        echo "RAID1" ;;
    thanos)
        echo "RAID5" ;;
    galileo|pleiades)
        echo "RAID1 CUDA" ;;
    sumi|miga|quatchi)
        echo "RAID1 SERVER NO_ECE" ;;
    gattaca)
        echo "HWE DATA2" ;;
    cpen291*)
        echo "SERVER NO_ECE" ;;
esac
