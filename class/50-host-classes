#! /bin/bash

case $HOSTNAME in
    svmailp[1-5])
        echo "SERVER UBUNTU_MAIL_IMAP" ;;
    smtp?|svsmtpp?)
        echo "SERVER MAIL" ;;
    svwebmailp[1-2])
        echo "SERVER" ;;
    [kmxv]sql?)
        echo "SERVER WEB DATABASE RT RAID" ;;
    svsql[dp]*)
        echo "SERVER DATABASE RT" ;;
    modigliani)
        # modigliani is not integrated with ECE.
        echo "GNOME KDE OMNI" ;;
    [kmx]host*)
        echo "SERVER VM_HOST" ;;
    [kmxv]ldap?|master)
        echo "SERVER LOOKUPSERVER" ;;
    [kmxv]lookup?)
        echo "SERVER LOOKUPSERVER VERTXSERVER" ;;
    svlookupp?)
        echo "SERVER LOOKUPSERVER" ;;
    msmb1)
        echo "SERVER SMBSERVER RAID" ;;
    [kmxv]smb?|svsmbp1)
        echo "SERVER SMBSERVER" ;;
    [kmxv]web?|[kmx]vweb?|svweb*)
        echo "SERVER WEB RT" ;;
    [kmxv]mx?|[kmx]mail?|*smtp*)
        echo "SERVER MAIL WEB" ;;
    [kmxv]flex?)
        echo "SERVER" ;;
    node*) # to be clear: these are nodes on Rafeef/morty.
        echo "GRID" ;;
    morty)
        echo "RAID GRID" ;;
    *webgoat*) 
        echo "SERVER WEBGOAT" ;;
    purang1[345])
        echo "VM_HOST" ;;
esac
