#! /bin/bash

case $HOSTNAME in
    svpxe[dp]*)
        echo "NO_DHCPC SERVER FAISERVER" ;;
    svmailp[1-5])
        echo "SERVER UBUNTU_MAIL_IMAP" ;;
    smtp?|svsmtpp?)
        echo "SERVER MAIL" ;;
    svwebmailp[1-2])
        echo "SERVER" ;;
    svsql[dp]*)
        echo "SERVER DATABASE RT" ;;
    [kmx]host*)
        echo "NO_DHCPC SERVER VM_HOST" ;;
    [kmxv]ldap?|master)
        echo "NO_DHCPC SERVER LOOKUPSERVER" ;;
    [kmxv]lookup?|svlookup[dp]?)
        case $HOSTNAME in klookup?) echo "RAID" ; esac
        echo "NO_DHCPC SERVER LOOKUPSERVER" ;;
    msmb1)
        echo "SERVER SMBSERVER RAID" ;;
    [kmxv]smb?|svsmbp1)
        echo "SERVER SMBSERVER" ;;
    [kmxv]web?|[kmx]vweb?|svweb*)
        echo "SERVER WEB RT" ;;
    [kmxv]mx?|[kmx]mail?|*smtp*)
        echo "SERVER MAIL WEB" ;;
    [kmxv]flex?)
        echo "SERVER" ;;
    node*) # to be clear: these are nodes on Rafeef/morty.
        echo "GRID" ;;
    morty)
        echo "RAID GRID" ;;
    *webgoat*) 
        echo "SERVER WEBGOAT" ;;
    purang1[345])
        echo "VM_HOST" ;;
    bci04|mehdi-pc02|kramer|jerry)
        echo "CUDA" ;;
    bci06)
        echo "CUDA NO_ECE" ;;
esac
