#! /bin/bash

case $HOSTNAME in
    svpxe[dp]*)
        echo "NO_DHCPC SERVER FAISERVER" ;;
    svmailp[0-9])
        echo "SERVER UBUNTU_MAIL_IMAP" ;;
    smtp?|svsmtpp?)
        echo "SERVER MAIL" ;;
    svwebmailp[0-9])
        echo "SERVER WEBMAIL" ;;
    svsql[dp]*)
        echo "SERVER DATABASE" ;;
    rt|rt.*|rt-staging|rt-staging.*)
        echo "SERVER WEB RT" ;;
    [kmx]host*)
        echo "NO_DHCPC SERVER VM_HOST" ;;
    master|master[0-9])
        echo "NO_DHCPC SERVER MASTERSERVER LOOKUPSERVER" ;;
    cfmaster*)
        echo "SERVER" ;;
    [kmxv]ldap?)
        echo "NO_DHCPC SERVER LOOKUPSERVER" ;;
    [kmxv]lookup?|svlookup[dp]?)
        case $HOSTNAME in klookup?) echo "RAID1" ; esac
        echo "NO_DHCPC SERVER LOOKUPSERVER" ;;
    msmb1)
        echo "SERVER SMBSERVER RAID1" ;;
    [kmxv]smb?|svsmbp[0-9])
        echo "SERVER SMBSERVER" ;;
    fog*|svfog*)
        echo "SERVER SLOW" ;;
    *webgoat*)
        echo "SERVER WEBGOAT" ;;
    [kmxv]web?|[kmx]vweb?|svweb*)
        echo "SERVER WEB RT" ;;
    [kmxv]flex?)
        echo "SERVER" ;;
    node*) # to be clear: these are nodes on Rafeef/morty.
        echo "GRID" ;;
    morty)
        echo "RAID1 GRID" ;;
    purang1[345])
        echo "VM_HOST" ;;
    bci04|mehdi-pc02|kramer|jerry|purang8|oceanus)
        echo "CUDA" ;;
    bci06)
        echo "CUDA NO_ECE" ;;
    jwang-pc22)
        echo "LARGE CUDA" ;;    # Has multiple disks; install to just the SSD
    tims-pc21)
        echo "DISK1P3 CUDA" ;;
    zeus)
        echo "RAID1" ;;
esac
