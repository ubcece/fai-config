# /etc/network/interfaces
# vim: set ts=2 sw=2 et si:
# 2011-11-03 Derek Poon. xldap1 is an IBM blade (in fact bc1-n11).
# NIC1 is detected as eth0 and is connected to bc1 switch2 (Nortel/Alteon).
# NIC2 is detected as eth1 and is connected to bc1 switch1 (IBM).

auto lo
iface lo inet loopback
  # ldap.ece.ubc.ca
  npath-virtual-server-ipv4 137.82.52.190

auto eth0
iface eth0 inet static
  address 137.82.52.195
  netmask 255.255.255.0
  network 137.82.52.0
  broadcast 137.82.52.255
  gateway 137.82.52.254
