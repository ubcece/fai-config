# /etc/network/interfaces
# vim: set ts=2 sw=2 et si:

auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
  address 137.82.52.54
  netmask 255.255.255.0
  network 137.82.52.0
  broadcast 137.82.52.255
  gateway 137.82.52.254
  dns-nameservers 137.82.52.165 137.82.52.170
  dns-search ece.ubc.ca

auto lo:ugrad-matlab
iface lo:ugrad-matlab inet static
  address 137.82.52.25
  netmask 255.255.255.255
  broadcast 137.82.52.25
  pre-up sysctl -q -w net.ipv4.conf.all.arp_ignore=2
  pre-up sysctl -q -w net.ipv4.conf.all.arp_announce=2
  up   ip route add 137.82.52.25 dev lo
  down ip route del 137.82.52.25 dev lo
