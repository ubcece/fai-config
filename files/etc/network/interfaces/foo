# /etc/network/interfaces

auto lo
iface lo inet loopback
  up nameif
  post-up ifconfig intif up # internal interface; outgoing traffic
  post-up ifconfig extif up # external interface; incoming traffic

auto mgtif
iface mgtif inet static
  address 137.82.52.8
  netmask 255.255.255.0
  network 137.82.52.0
  broadcast 137.82.52.255
  gateway 137.82.52.254
  dns-nameservers 137.82.52.165 137.82.52.170
  dns-search ece.ubc.ca
